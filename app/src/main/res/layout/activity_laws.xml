                    app:cardCornerRadius="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:background="@drawable/gradientbackground3"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:paddingTop="9sp"
                        android:paddingBottom="9sp"
                        android:text="10. Law for Self Defence sections of IPC Section 104"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="21sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/c11"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:background="@drawable/gradientbackground3"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradientbackground3"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:paddingTop="9sp"
                        android:paddingBottom="9sp"
                        android:text="11. Law for Self Defence sections of IPC Section 105"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="21sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/c12"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    android:background="@drawable/gradientbackground3"
                    app:cardCornerRadius="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:paddingTop="9sp"
                        android:background="@drawable/gradientbackground3"
                        android:paddingBottom="9sp"
                        android:text="12. Law for Self Defence sections of IPC Section 106"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="21sp" />
                </androidx.cardview.widget.CardView>


            </GridLayout>
        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>