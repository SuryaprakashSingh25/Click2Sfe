<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationActivity"
    android:background="@drawable/gradientbackground3">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryVariant"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@color/white" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="18sp"
        android:layout_marginTop="60dp"
        tools:context=".LAWSC2S">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11sp"
                android:layout_marginTop="11sp"
                android:layout_marginRight="11sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90sp"
                        android:layout_height="90sp"
                        android:background="@drawable/gradient_background_2"
                        android:padding="4sp"
                        android:src="@drawable/ic_law"></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingTop="18sp"
                        android:text="Law and Order"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="35sp"
                        android:background="@drawable/gradient_background_2"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:columnCount="1"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/c1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="10sp"
                    android:background="@drawable/gradient_background_2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:paddingTop="9sp"
                        android:paddingBottom="9sp"
                        android:background="@drawable/gradientbackground3"
                        android:text="1. Defences Against Culpable Homicide"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="21sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/c2"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:paddingTop="9sp"
                        android:paddingBottom="9sp"
                        android:background="@drawable/gradientbackground3"
                        android:text="2.Law for Self Defence sections of IPC Section 96"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="21sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/c3"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="10sp"
                    android:background="@drawable/gradientbackground3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:paddingTop="9sp"
                        android:paddingBottom="9sp"
                        android:text="3. Law for Self Defence sections of IPC Section 97"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="21sp"
                        android:background="@drawable/gradientbackground3"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/c4"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:paddingTop="9sp"
                        android:paddingBottom="9sp"
                        android:text="4. Law for Self Defence sections of IPC Section 98"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="21sp"
                        android:background="@drawable/gradientbackground3"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/c5"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:paddingTop="9sp"
                        android:paddingBottom="9sp"
                        android:text="5. Law for Self Defence sections of IPC Section 99"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="21sp"
                        android:background="@drawable/gradientbackground3"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/c6"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/gradientbackground3"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradientbackground3"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:paddingTop="9sp"
                        android:paddingBottom="9sp"
                        android:text="6. Law for Self Defence sections of IPC Section 100"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="21sp" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/c7"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/gradientbackground3"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:paddingTop="9sp"
                        android:paddingBottom="9sp"
                        android:text="7. Law for Self Defence sections of IPC Section 101"
                        android:textAlignment="center"
                        android:background="@drawable/gradientbackground3"
                        android:textColor="@color/black"
                        android:textSize="21sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/c8"
                    android:layout_rowWeight="1"
                    android:background="@drawable/gradientbackground3"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:background="@drawable/gradientbackground3"
                        android:paddingTop="9sp"
                        android:paddingBottom="9sp"
